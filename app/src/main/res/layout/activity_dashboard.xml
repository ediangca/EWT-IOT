<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="20dp"
    tools:context=".DashboardActivity">


    <TextView
        android:id="@+id/datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/linearMoisture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/moisture"
        app:layout_constraintBottom_toBottomOf="@id/linearMoisture"
        app:layout_constraintEnd_toEndOf="@id/linearMoisture"
        app:layout_constraintStart_toEndOf="@id/linearMoisture"
        app:layout_constraintTop_toTopOf="@id/linearMoisture" />

    <LinearLayout
        android:id="@+id/linearMoisture"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/linearHumidity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datetime">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moisture Level"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="14dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/moisture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/humidity"
        app:layout_constraintBottom_toBottomOf="@id/linearHumidity"
        app:layout_constraintEnd_toEndOf="@id/linearHumidity"
        app:layout_constraintStart_toEndOf="@id/linearHumidity"
        app:layout_constraintTop_toTopOf="@id/linearHumidity" />

    <LinearLayout
        android:id="@+id/linearHumidity"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/linearTemperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearMoisture">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity Level"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="14dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/temperature"
        app:layout_constraintBottom_toBottomOf="@id/linearTemperature"
        app:layout_constraintEnd_toEndOf="@id/linearTemperature"
        app:layout_constraintStart_toEndOf="@id/linearTemperature"
        app:layout_constraintTop_toTopOf="@id/linearTemperature" />

    <LinearLayout
        android:id="@+id/linearTemperature"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/linearHumidity"
        app:layout_constraintTop_toBottomOf="@id/linearMoisture">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature Level"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="14dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#759EC8C4"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearTemperature">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_primary"
            android:padding="10dp"
            android:text="HISTORY"
            android:textColor="@color/color_light_3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_primary"
            android:padding="10dp"
            android:text="About Project"
            android:textColor="@color/color_light_3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResearcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_primary"
            android:padding="10dp"
            android:text="RESEARCHER"
            android:textColor="@color/color_light_3"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>