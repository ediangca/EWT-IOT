<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#759EC8C4">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EWT-IOT Project"
        android:textAlignment="center"
        android:textColor="@color/teal_100"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100mm"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Significance of the Study"
                android:textAlignment="center"
                android:textColor="@color/secondary"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@id/linearTemperature" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/project_description"
                android:textAlignment="center"
                android:textColor="@color/secondary"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/linearTemperature" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Scope and Limitation"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/secondary"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@id/linearTemperature" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/project_scope_and_limitation"
                android:textAlignment="center"
                android:textColor="@color/secondary"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/linearTemperature" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>